<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:background">@color/background_blue</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorPrimary">@color/medium_blue</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 弹出式对话框 theme. -->
    <style name="CustomDialogStyle" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:background">@color/white_medium_transparent</item>
        <item name="android:textColor">@color/medium_blue</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">14dp</item>
    </style>

